# Telegram бот для алертов
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# База данных PostgreSQL
POSTGRES_HOST=postgresql
POSTGRES_PORT=5432
POSTGRES_DB=telemetry
POSTGRES_USER=telemetry
POSTGRES_PASSWORD=your_secure_password_here

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=telemetry
RABBITMQ_PASSWORD=your_secure_password_here
RABBITMQ_VHOST=/
RABBITMQ_URL=amqp://telemetry:your_secure_password_here@rabbitmq:5672/
QUEUE_NAME=telemetry.raw

# Generator Configuration
RATE_HZ=2
SAT_COUNT=5
ORBIT=LEO
REGIONS=RU

# Processor Configuration
PG_DSN=postgresql://telemetry:your_secure_password_here@postgresql:5432/telemetry

# Yandex.Cloud (для Terraform)
YC_TOKEN=your_yc_token_here
YC_CLOUD_ID=your_cloud_id_here
YC_FOLDER_ID=your_folder_id_here

# Kubernetes
KUBECONFIG_CONTENT=your_kubeconfig_content_here

# Мониторинг
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_password_here
VICTORIAMETRICS_RETENTION_PERIOD=30d

# SSH ключи
SSH_PUBLIC_KEY=your_ssh_public_key_here
SSH_PRIVATE_KEY_PATH=~/.ssh/id_rsa
