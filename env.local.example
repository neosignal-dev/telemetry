# Локальная разработка - простые пароли для docker-compose
# Telegram бот для алертов
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# База данных PostgreSQL (локальная разработка)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=telemetry
POSTGRES_USER=telemetry
POSTGRES_PASSWORD=example

# RabbitMQ (локальная разработка)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=telemetry
RABBITMQ_PASSWORD=telemetry
RABBITMQ_VHOST=/
RABBITMQ_URL=amqp://telemetry:telemetry@localhost:5672/
QUEUE_NAME=telemetry.raw

# Generator Configuration
RATE_HZ=2
SAT_COUNT=5
ORBIT=LEO
REGIONS=RU

# Processor Configuration
PG_DSN=postgresql://telemetry:example@localhost:5432/telemetry

# Мониторинг (локальная разработка)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
VICTORIAMETRICS_RETENTION_PERIOD=1d
